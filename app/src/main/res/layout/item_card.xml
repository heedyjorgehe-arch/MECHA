<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="16dp"
android:padding="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/cardfragment"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris_fuerte">

    <Button
        android:id="@+id/btncerrar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_gravity="right"/>


    <TextView
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Usuarios"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="12dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnRegistrarMecanico"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Registrar MecÃ¡nico"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnRegistrarConductor"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Registrar Conductor"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_gravity="center"/>

</LinearLayout>

</androidx.cardview.widget.CardView>
